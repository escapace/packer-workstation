{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "sha256:c87a2d81d67bbaeaf646aea5bedd70990078ec252fc52f5a7d65ff609871e255",
      "iso_urls": [
        "CentOS-8.2.2004-x86_64-dvd1.iso",
        "http://mirror.mobap.edu/centos/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-dvd1.iso",
        "http://mirror.facebook.net/centos/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-dvd1.iso",
        "http://mirror.mobap.edu/centos/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-dvd1.iso",
        "http://mirror.cc.columbia.edu/pub/linux/centos/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-dvd1.iso",
        "http://mirror.arizona.edu/centos/8.2.2004/isos/x86_64/CentOS-8.2.2004-x86_64-dvd1.iso"
      ],
      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "vagrant",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{ user `memory` }}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{ user `cpus` }}"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-centos-8-x86_64"
    }
  ],
  "post-processors": [
    [
      {
        "output": "builds/{{.Provider}}-centos8.box",
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile.tpl"
      },
      {
        "access_token": "{{user `access_token`}}",
        "box_tag": "escapace/workstation",
        "type": "vagrant-cloud",
        "version": "{{user `version`}}"
      }
    ]
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "./scripts/python.sh",
      "type": "shell"
    },
    {
      "ansible_env_vars": [
        "ANSIBLE_CONFIG='./ansible/ansible.cfg'",
        "ANSIBLE_BECOME=True",
        "ANSIBLE_CALLBACK_WHITELIST=profile_roles",
        "ANSIBLE_HOST_KEY_CHECKING=False",
        "ANSIBLE_NOCOLOR=True",
        "ANSIBLE_RETRY_FILES_ENABLED=False",
        "ANSIBLE_SSH_ARGS='-o ForwardAgent=yes -o ControlMaster=auto -o ControlPersist=60s'"
      ],
      "groups": [
        "provider_vagrant"
      ],
      "playbook_file": "./ansible/bootstrap.yml",
      "type": "ansible",
      "user": "vagrant"
    },
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "expect_disconnect": true,
      "inline": [
        "reboot"
      ],
      "pause_before": "5s",
      "timeout": "10m",
      "type": "shell"
    },
    {
      "ansible_env_vars": [
        "ANSIBLE_CONFIG='./ansible/ansible.cfg'",
        "ANSIBLE_BECOME=True",
        "ANSIBLE_CALLBACK_WHITELIST=profile_roles",
        "ANSIBLE_HOST_KEY_CHECKING=False",
        "ANSIBLE_NOCOLOR=True",
        "ANSIBLE_RETRY_FILES_ENABLED=False",
        "ANSIBLE_SSH_ARGS='-o ForwardAgent=yes -o ControlMaster=auto -o ControlPersist=60s'"
      ],
      "groups": [
        "provider_vagrant"
      ],
      "pause_before": "45s",
      "playbook_file": "./ansible/workstation.yml",
      "type": "ansible",
      "user": "vagrant"
    },
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "./scripts/networking.sh",
        "./scripts/cleanup.sh",
        "./scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "access_token": "{{env `VAGRANT_ACCESS_TOKEN`}}",
    "cpus": "2",
    "disk_size": "20480",
    "memory": "2048",
    "name": "centos-8.2"
  }
}

